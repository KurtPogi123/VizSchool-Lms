{{!
    @template core/loginform

    Modern Grid-based Moodle template for the login page.
}}

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

/* Logo Section */
.logo-section {
    text-align: center;
    margin-bottom: 40px;
}

.brand-logo {
    width: auto;
    height: auto;
    background: none;
    border-radius: 0;
    box-shadow: none;
    display: inline-block;
}

/* Form Section */
.login-form-section {
    background: white;
    border-radius: 16px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    padding: 40px;
    width: 100%;
    max-width: 450px;
}

.login-form-container {
    width: 100%;
}

.form-header {
    margin-bottom: 40px;
}

.form-title {
    font-size: 28px;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 8px;
}

.form-subtitle {
    color: #718096;
    font-size: 16px;
}

.form-group {
    margin-bottom: 24px;
}

.form-label {
    display: block;
    font-weight: 600;
    color: #374151;
    margin-bottom: 8px;
    font-size: 14px;
}

.form-input {
    width: 100%;
    padding: 16px 20px;
    border: 2px solid #e2e8f0;
    border-radius: 12px;
    font-size: 16px;
    transition: all 0.2s ease;
    background: transparent;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    box-sizing: border-box;
}

.form-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.form-input::placeholder {
    color: #a0aec0;
}

.login-button {
    width: 100%;
    padding: 16px 20px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    margin-bottom: 24px;
}

.login-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.25);
}

.login-button:active {
    transform: translateY(0);
}

.forgot-password {
    text-align: center;
    margin-bottom: 32px;
}

.forgot-link {
    color: #667eea;
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.2s ease;
}

.forgot-link:hover {
    color: #764ba2;
}

.divider {
    text-align: center;
    position: relative;
    margin: 32px 0;
    color: #a0aec0;
    font-size: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.divider::before {
    content: '';
    flex: 1;
    height: 1px;
    background: #e2e8f0;
    margin-right: 16px;
}

.divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e2e8f0;
    margin-left: 16px;
}

.divider span {
    background: white;
    padding: 0 8px;
    position: relative;
    white-space: nowrap;
    flex-shrink: 0;
}

.signup-section {
    text-align: center;
    color: #718096;
    font-size: 14px;
}

.signup-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s ease;
}

.signup-link:hover {
    color: #764ba2;
}

.alert {
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    font-size: 14px;
}

.alert-danger {
    background: #fee2e2;
    color: #dc2626;
    border: 1px solid #fecaca;
}

.alert-info {
    background: #dbeafe;
    color: #2563eb;
    border: 1px solid #93c5fd;
}

.visually-hidden {
    position: absolute !important;
    width: 1px !important;
    height: 1px !important;
    padding: 0 !important;
    margin: -1px !important;
    overflow: hidden !important;
    clip: rect(0, 0, 0, 0) !important;
    white-space: nowrap !important;
    border: 0 !important;
}

/* Password toggle functionality */
.password-wrapper {
    position: relative;
    width: 100%;
}

.password-wrapper .form-input {
    width: 100%;
    padding-right: 50px; /* reserve space for the eye icon */
}

.toggle-password {
    position: absolute;
    top: 50%;
    right: 15px;
    transform: translateY(-50%);
    background: #f7fafc;
    border: 1px solid #e2e8f0;
    border-radius: 6px;
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
    z-index: 100;
}

.toggle-password:hover {
    background: #edf2f7;
    border-color: #cbd5e0;
}

.toggle-password:focus {
    outline: 2px solid #667eea;
    outline-offset: 2px;
    border-radius: 6px;
}

/* Simple eye icon using text */
.toggle-password::after {
    content: 'üëÅ';
    font-size: 16px;
    line-height: 1;
}

/* When password is visible, show different icon */
.toggle-password.password-visible::after {
    content: 'üôà';
}

/* Responsive */
@media (max-width: 768px) {
    .login-form-section {
        padding: 30px 20px;
        margin: 0 10px;
    }
    
    .logo-section {
        margin-bottom: 30px;
    }
    
    .brand-logo {
        width: 70px;
        height: 70px;
        font-size: 28px;
    }
    
    .form-title {
        font-size: 22px;
    }
}

@media (max-width: 480px) {
    .login-form-section {
        padding: 25px 15px;
        margin: 0 5px;
        border-radius: 12px;
    }
    
    .form-input, .login-button {
        padding: 14px 16px;
        font-size: 16px;
    }
}
</style>

<div class="modern-login-container">
    <!-- Logo Section -->
    <div class="logo-section">
        <div class="brand-logo">
            {{#logourl}}
                <img src="{{logourl}}" alt="{{sitename}}" style="width: 100px; height: 100px; border-radius: 12px; object-fit: cover;" />
            {{/logourl}}
            {{^logourl}}
                üéì
            {{/logourl}}
        </div>
    </div>

    <!-- Login Form Section -->
    <div class="login-form-section">
        <div class="login-form-container">
            <div class="form-header">
                <h2 class="form-title">Log in</h2>
                <p class="form-subtitle">Enter your credentials to access your account</p>
            </div>

            {{#maintenance}}
                <div class="alert alert-danger">
                    {{{maintenance}}}
                </div>
            {{/maintenance}}

            {{#error}}
                <a href="#" id="loginerrormessage" class="visually-hidden">{{error}}</a>
                <div class="alert alert-danger" role="alert">{{error}}</div>
            {{/error}}

            {{#info}}
                <a href="#" id="logininfomessage" class="visually-hidden">{{info}}</a>
                <div class="alert alert-info" role="alert">{{info}}</div>
            {{/info}}

            {{#cansignup}}
                <a href="{{signupurl}}" class="visually-hidden">{{#str}} tocreatenewaccount {{/str}}</a>
            {{/cansignup}}

            {{#showloginform}}
                <form action="{{loginurl}}" method="post" id="login">
                    <input id="anchor" type="hidden" name="anchor" value="">
                    <script>document.getElementById('anchor').value = location.hash;</script>
                    <input type="hidden" name="logintoken" value="{{logintoken}}">

                    <div class="form-group">
                        <label for="username" class="form-label">
                            {{^canloginbyemail}}
                                Username
                            {{/canloginbyemail}}
                            {{#canloginbyemail}}
                                Email or Username
                            {{/canloginbyemail}}
                        </label>
                        <input type="text" 
                               name="username" 
                               id="username" 
                               class="form-input"
                               value="{{username}}" 
                               placeholder="{{^canloginbyemail}}Enter your username{{/canloginbyemail}}{{#canloginbyemail}}Enter your email or username{{/canloginbyemail}}" 
                               autocomplete="username">
                    </div>

                    <div class="form-group password-group">
                        <label for="password" class="form-label">Password</label>
                        <div class="password-wrapper">
                            <input type="password" 
                                   name="password" 
                                   id="password" 
                                   class="form-input" 
                                   placeholder="Enter your password" 
                                   autocomplete="current-password">
                            <button type="button" class="toggle-password" aria-label="Toggle password visibility"></button>
                        </div>
                    </div>

                    {{#recaptcha}}
                        <div class="form-group">
                            {{{recaptcha}}}
                        </div>
                    {{/recaptcha}}

                    <button class="login-button" type="submit" id="loginbtn">
                        Log In
                    </button>

                    <div class="forgot-password">
                        <a href="{{forgotpasswordurl}}" class="forgot-link">Forgot your password?</a>
                    </div>
                </form>
            {{/showloginform}}

            {{#hasinstructions}}
                <div class="divider">
                    <span>First time here?</span>
                </div>
                <div style="color: #718096; font-size: 14px; margin-bottom: 20px; text-align: center;">
                    {{{instructions}}}
                </div>
            {{/hasinstructions}}

            {{#cansignup}}
                <div class="signup-section">
                    Don't have an account? <a href="{{signupurl}}" class="signup-link">Sign up</a>
                </div>
            {{/cansignup}}

            {{#canloginasguest}}
                
                <form action="{{loginurl}}" method="post" id="guestlogin" style="text-align: center;">
                    <input type="hidden" name="logintoken" value="{{logintoken}}">
                    <input type="hidden" name="username" value="guest" />
                    <input type="hidden" name="password" value="guest" />
                    <button type="submit" id="loginguestbtn" class="signup-link" style="background: none; border: none; cursor: pointer; font-size: 14px;">
                        Continue as guest
                    </button>
                </form>
            {{/canloginasguest}}
        </div>
    </div>
</div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    const toggle = document.querySelector(".toggle-password");
    const passwordInput = document.getElementById("password");

    if (toggle && passwordInput) {
        toggle.addEventListener("click", function(e) {
            e.preventDefault();
            
            const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
            passwordInput.setAttribute("type", type);
            
            // Toggle the visual state of the button
            if (type === "text") {
                toggle.classList.add("password-visible");
                toggle.setAttribute("aria-label", "Hide password");
            } else {
                toggle.classList.remove("password-visible");
                toggle.setAttribute("aria-label", "Show password");
            }
        });
    }
});
</script>

{{#js}}
    {{^error}}
        {{#autofocusform}}
            require(['core_form/events'], function(FormEvent) {
                function autoFocus() {
                    const userNameField = document.getElementById('username');
                    if (userNameField.value.length == 0) {
                        userNameField.focus();
                    } else {
                        document.getElementById('password').focus();
                    }
                }
                autoFocus();
                window.addEventListener(FormEvent.eventTypes.fieldStructureChanged, autoFocus);
            });
        {{/autofocusform}}
    {{/error}}
    {{#error}}
        document.getElementById('loginerrormessage').focus();
    {{/error}}
    require(['core_form/submit'], function(Submit) {
        Submit.init("loginbtn");
        {{#canloginasguest}}
            Submit.init("loginguestbtn");
        {{/canloginasguest}}
    });
{{/js}}